extends layout 

block stylesheets
  link(rel='stylesheet', href='/stylesheets/userDetail.css')

block content 
  div.detail-background
    div.wrapper
      if update === null
        p Update not found!
      else
        h1 Week #{update.week}
        div.info-text
          p.secondary-text #{update.title}
          p.secondary-text #{update.description}

        div.actions
          a.button.svg-button(href=`/users/${userId}/project/${projectId}/weekly-updates`)
            svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16")
              path(fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8")
            span Back to Updates
          if currentUser && currentUser.isAdmin
              a.button(href=`/users/${userId}/project/${projectId}/weekly-update/${update._id}/edit`) Edit
              a.button.delete-button(href=`/users/${userId}/project/${projectId}/weekly-update/${update._id}/delete`) Delete