extends layout 

block stylesheets
  link(rel='stylesheet', href='/stylesheets/forms.css')

block content 
   div.background 
    div.form-wrapper.sign-up-form-wrapper  
      form(method="POST" action=formAction)
        h1= title
        div.input-field  
          input(type="text" id="name" name="name" value=(user && user.name) required)
          label(for="name") Name:
        div.input-field  
          input(type="email" id="email" name="email" value=(user && user.email) required)
          label(for="email") Email 1:
        div.input-field  
          input(type="email" id="additionalEmailOne" name="additionalEmailOne" value=(user && user.additionalEmailOne))
          label(for="additionalEmailOne") Email 2:
        div.input-field  
          input(type="email" id="additionalEmailTwo" name="additionalEmailTwo" value=(user && user.additionalEmailTwo))
          label(for="additionalEmailTwo") Email 3:
        if !isUpdate
          div.input-field
            input(type="password" id="password" name="password" required)
            label(for="password") Password:
        div.input-field  
          input(type="tel" id="phoneNumber" name="phoneNumber" value=(user && user.phoneNumber) required)
          label(for="phoneNumber") Phone Number:
        button.button(type="submit") Submit
      if errors
        each error in errors
          p.error-message= error.msg